{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block main_cont %}
    <div class="users_table" style="min-width: 35%">
        <div class="d-flex gap-2 bg-dark py-1 ps-2 rounded-top">
            <div>
                <form action="{{ path('unblock_users') }}" method="post" id="unblockForm">
                    <input type="hidden" name="actionInputUnblock" id="actionInputUnblock">
                    <button type="submit" class="btn btn-success" name="action" value="unblock">UnBlock</button>
                </form>
            </div>
            <div>
                <form action="{{ path('block_users') }}" method="post" id="blockForm">
                    <input type="hidden" name="actionInputBlock" id="actionInputBlock">
                    <button type="submit" class="btn btn-warning" name="action" value="block">Block</button>
                </form>
            </div>
            <div>
                <form action="{{ path('delete_users') }}" method="post" id="deleteForm">
                    <input type="hidden" name="actionInputDelete" id="actionInputDelete">
                    <button type="submit" id="deleteBtn" class="btn btn-danger" name="action" value="delete">Delete</button>
                </form>
            </div>
        </div>
        <div>
            <table class="table table-striped table-hover" style="width: 100%">
                <thead>
                <tr>
                    <th scope="col">
                        <input type="checkbox" id="checkbox" class="checkAll">
                    </th>
                    <th scope="col">Name</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Registration date</th>
                    <th scope="col">Last login date</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">
                            <input type="checkbox" name="users[]" value="{{ user.id }}" class="checkbox-element">
                        </th>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.RegitrationDate.format('Y-m-d H:i:s') }}</td>
                        <td>{{ user.lastLoginDate.format('Y-m-d H:i:s') }}</td>
                        <td>{{ user.status }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="container">
            <div class="row align-items-center justify-content-end">
                <div class="col-auto">
                    <p class="m-0">Login by account: <span class="text-primary">{{ user_name }}</span></p>
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
